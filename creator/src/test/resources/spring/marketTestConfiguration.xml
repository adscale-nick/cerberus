<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:spring/marketBeanConfiguration.xml"/>

    <bean id="testProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:market-server-test.properties" />
    </bean>
    <bean class="org.adscale.cerberus.creator.AccountCreator">
        <property name="properties" ref="testProperties"/>
    </bean>
    <bean class="org.adscale.cerberus.creator.WebsiteCreator">
        <property name="properties" ref="testProperties"/>
    </bean>
</beans>
